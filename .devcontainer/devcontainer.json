{
    "name": "dev-base-repo",
    "dockerFile": "Dockerfile",
    "context": ".",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "tamasfe.even-better-toml",
                "ms-python.isort",
                "inferrinizzard.prettier-sql-vscode",
                "oderwat.indent-rainbow",
                "ms-vscode.makefile-tools",
                "ms-mssql.mssql",
                "ms-toolsai.jupyter",
                "ms-azure-devops.azure-pipelines",
                "formulahendry.theme-ubuntu-style",
                "ms-vscode-remote.remote-wsl",
                "ms-vscode-remote.remote-containers",
                "ms-vscode.azure-repos",
                "ThiagoLcioBittencourt.ubuntuvscode",
                "VisualStudioExptTeam.vscodeintellicode",
                "mhutchie.git-graph",
                "eamodio.gitlens",
                "ms-python.debugpy",
                "ms-vscode.azurecli"
            ],
            "settings": [
                {
                    "terminal.integrated.shell.linux": "/bin/bash"
                }
            ]
        }
    },
    "containerEnv": {
        "USERNAME": "${env:username}"
    },
    "runArgs": [
        "--add-host=host.docker.internal:host-gateway",
        "--add-host=ollama:host-gateway",
        "--add-host=localhost:127.0.0.1",
        "--cap-add=SYS_ADMIN",
        "--security-opt",
        "seccomp:unconfined"
    ],
    "mounts": [
        "source=C:/Users/${env:username}/.ssh,target=/root/.ssh,type=bind",
        "source=C:/Users/${env:username}/.claude,target=/root/.claude,type=bind"
    ],
    "postCreateCommand": "chmod 700 ~/.ssh || true; chmod 600 ~/.ssh/* || true; sed -i 's/\r$//' .devcontainer/loader_script.sh; chmod +x .devcontainer/loader_script.sh; ./.devcontainer/loader_script.sh;ls -la /workspace && echo 'Checking .claude:' && ls -la /workspace/.claude || echo '.claude not found'",
    "remoteUser": "root"
}